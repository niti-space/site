---
import "../styles/main.css";
import {
  SITE_NAME,
  SITE_DESCRIPTION,
  ORG_ADDRESS_CYR,
  ORG_ADDRESS_GMAP_URL,
  DIKIDI_ID,
  TG_ADMIN_USERNAME,
} from "astro:env/client";
import JsonLD from "../components/json-ld.astro";

const siteName = SITE_NAME || "НИТЬ";
const siteDescription =
  SITE_DESCRIPTION ||
  "Пространство психологической поддержки и личностного развития в Белграде";
const siteURL = import.meta.env.SITE;
const appointmentURL = `https://dikidi.net/${DIKIDI_ID}`;
const contactURL = `https://t.me/${TG_ADMIN_USERNAME}`;
---

<html lang="ru-RU">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteName}</title>
    <meta name="description" content={siteDescription} />
    <link rel="canonical" href={siteURL} />
    <JsonLD />
  </head>
  <body>
    <header>
      <h1>{siteName}</h1>
      <p data-role="description">{siteDescription}</p>
    </header>
    <main>
      <p data-role="location">
        <a href={ORG_ADDRESS_GMAP_URL}>{ORG_ADDRESS_CYR}</a>
      </p>
      <p data-role="appointment">
        <a href={appointmentURL}>Забронировать кабинет</a>
      </p>
      <p data-role="contact">
        <a href={contactURL} target="_blank" rel="noopener"
          >Связаться с администратором в телеграме</a
        >
      </p>
    </main>
  </body>
</html>
